<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.metodosCerrados.TablaController">
    <padding>
        <Insets bottom="10" top="10" left="20" right="20"/>
    </padding>

    <center>
        <HBox GridPane.rowIndex="0" alignment="TOP_CENTER">
            <Text fx:id="titulo" text="Resultados" />
        </HBox>

        <HBox GridPane.rowIndex="1" spacing="5" alignment="CENTER">
            <TableView fx:id="tblResultados">
                <columns>
                    <TableColumn fx:id="clmNo" text="No."/>
                    <TableColumn fx:id="clmA" text="a"/>
                    <TableColumn fx:id="clmB" text="b"/>
                    <TableColumn fx:id="clmFa" text="f(a)"/>
                    <TableColumn fx:id="clmFb" text="f(b)"/>
                    <TableColumn fx:id="clmXr" text="Xr"/>
                    <TableColumn fx:id="clmFxr" text="f(Xr)"/>
                    <TableColumn fx:id="clmError" text="Error"/>
                </columns>
            </TableView>
            <VBox spacing="5">
                <Button fx:id="btnSeguir" text="Seguir" minWidth="150"/>
                <Button fx:id="btnSalir" text="Salir" minWidth="150"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
